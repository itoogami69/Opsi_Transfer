<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="90dp">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:background="@drawable/kembali"
                android:layout_marginTop="10dp"
                android:paddingTop="3dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingBottom="3dp"
                android:layout_width="56dp"
                android:layout_height="44dp">
            </Button>

            <TextView
                android:layout_width="85dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:paddingTop="3dp"
                android:paddingStart="13dp"
                android:paddingEnd="10dp"
                android:text="@string/kirim"
                android:textColor="@color/dark_purple"
                android:textAlignment="textStart"
                android:textSize="25sp">
            </TextView>
        </LinearLayout>

   </LinearLayout>

    <LinearLayout
        android:layout_width="228dp"
        android:layout_height="23dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/pilih_tf"
            android:textColor="@color/grey">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="358dp"
        android:layout_height="157dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="@string/tf_bank"
                android:textSize="18dp"
                android:textAlignment="textStart"
                android:paddingLeft="75dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/transfermenu"
                app:backgroundTint="@color/calm_blue">
            </Button>
            
            <ImageView
                android:layout_weight="1"
                android:layout_marginTop="-60dp"
                android:layout_marginStart="18dp"
                android:background="@drawable/transfer_bank"
                android:layout_width="46dp"
                android:layout_height="46dp">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="@string/tf_sesama"
                android:textSize="18dp"
                android:textAlignment="textStart"
                android:paddingLeft="80dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/transfermenu"
                app:backgroundTint="@color/calm_blue">
            </Button>

            <ImageView
                android:layout_marginTop="-58dp"
                android:background="@drawable/transfer_sesama"
                android:layout_marginStart="18dp"
                android:layout_width="46dp"
                android:layout_height="46dp">
            </ImageView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="512dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="end">
        <ImageView
            android:layout_width="410dp"
            android:layout_height="90dp"
            android:background="@drawable/bottomnav">
        </ImageView>

    </LinearLayout>



</LinearLayout>